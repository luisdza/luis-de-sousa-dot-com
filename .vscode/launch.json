{
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Hugo",
            "program": "hugo",
            "args": ["server -D"]
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "programPath",
            "description": "Enter the path to the program you want to launch"
        }
    ]
}